{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "compat"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/test/*", "**/*.jest.*", "**/*.test.*"]}],
    "compat/compat": "error" // error when using features that are not supported in the browsers we target in .browserslistrc
  },
  "settings": {
    "polyfills": ["promises"]
  }
}
